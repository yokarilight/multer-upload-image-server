      "get": {
        "tags": [
          "Images - 圖片相關API"
        ],
        "description": "Get All Images API",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Response",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "example": "63d14c3955bd40e5a3bda371"
                      },
                      "imageUrl": {
                        "type": "string",
                        "example": "https://i.imgur.com/plkurey.jpg"
                      },
                      "imageName": {
                        "type": "string",
                        "example": "philly"
                      },
                      "imageDeleteHash": {
                        "type": "string",
                        "example": "WT8EUyxW10rKSv2"
                      }
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Images - 圖片相關API"
        ],
        "description": "Upload Image API",
        "parameters": [
          {
            "name": "image",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "Single image that you upload"
          }
        ],
        "responses": {
          "200": {
            "description": "Response",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "string",
                  "example": "Upload image successfully"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
